<% content_for :page_title do %>
  <%= link_to Spree.t(:reports), spree.admin_reports_url %> /
  <%= Spree.t(:total_sales) %>
<% end %>

<div class="card bg-light mb-3">
  <div class="card-body">
    <form>
      <div class="form-group">
        <label for="reports-group-by"><%= Spree.t(:group_by) %>:</label>
        <select id="reports-group-by">
          <option value="day">Day</option>
          <option value="week">Week</option>
          <option value="month">Month</option>
          <option value="year">Year</option>
        </select>
      </div>
    </form>
  </div>
</div>

<canvas
  id="chart--total_sales"
  class="reports--chart"
  width="400"
  height="100"
  aria-label="<%= Spree.t(:total_sales) %>"
  role="img"
  data-id="total_sales"
  data-label-key="day"
  data-data-key="totalSales"
  data-label="<%= Spree.t(:total_sales) %>"
  data-type="line"></canvas>

