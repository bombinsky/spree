<%= render partial: 'spree/admin/reports/header', locals: { title: Spree.t(:total_sales) } %>
<%= render partial: 'spree/admin/reports/filters', locals: { group_by: true } %>

<canvas
  id="chart--total_sales"
  class="reports--chart"
  height="120"
  aria-label="<%= Spree.t(:total_sales) %>"
  role="img"
  data-bg-color="rgba(71, 141, 193, 0.8)"
  data-line-color="rgba(71, 141, 193, 1)"
  data-id="total_sales"
  data-label="<%= Spree.t(:total_sales) %>"
  data-label-y="<%= current_currency %>"
  data-type="line"></canvas>

